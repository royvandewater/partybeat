<?xml version="1.0"?>
<xmms2>
    <player_status>
        <is_playing>{{ player.is_playing }}</is_playing>
        <current_action>{{ player.verbose_action }}</current_action>
        <last_update>{{ xmms_layer.timer }}</last_update>
    </player_status>
    <current_song>
        <title>{{ player.current_song.title }}</title>
        <artist>{{ player.current_song.artist }}</artist>
        <album>{{ player.current_song.album }}</album>
    </current_song>
    <playlist>
    {% for song in player.playlist %}
        <song id="{{song.position}}">
            <title>{{ song.title }}</name>
            <artist>{{ song.artist }}</artist>
            <album>{{ song.album }}</album>
        </song>
    {% endfor %}
    </playlist>
</xmms2>
